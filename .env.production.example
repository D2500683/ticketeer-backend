# Production Environment Variables for Render

# Database Configuration (MongoDB Atlas Production Cluster)
MONGODB_URI=mongodb+srv://username:password@production-cluster.mongodb.net/ticketeer?retryWrites=true&w=majority

# JWT Secret (Generate a strong 256-bit secret)
JWT_SECRET=your_production_jwt_secret_256_bits_long

# Cloudinary Configuration (Production Account)
CLOUDINARY_CLOUD_NAME=your_production_cloud_name
CLOUDINARY_API_KEY=your_production_api_key
CLOUDINARY_API_SECRET=your_production_api_secret

# Email Configuration (Production SMTP)
EMAIL_USER=noreply@yourdomain.com
EMAIL_PASS=your_production_email_app_password

# PayPal Configuration (Production Mode)
PAYPAL_CLIENT_ID=your_production_paypal_client_id
PAYPAL_CLIENT_SECRET=your_production_paypal_client_secret
PAYPAL_MODE=live

# Spotify Configuration (Production App)
SPOTIFY_CLIENT_ID=your_production_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_production_spotify_client_secret

# Server Configuration
PORT=10000
NODE_ENV=production

# CORS Configuration
FRONTEND_URL=https://your-domain.vercel.app

# Rate Limiting (Production Settings)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true
